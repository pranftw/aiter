{
  "mcpServers": {
    "playwright": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@playwright/mcp@latest",
        "--browser",
        "chrome",
        "--isolated",
        "--caps",
        "verify"
      ],
      "env": {
        "DISPLAY": ":0"
      }
    },
    "context7": {
      "type": "http",	
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": ""
      }
    }
  }
}