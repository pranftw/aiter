{
  "name": "aiter",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/cli/template"
  ],
  "scripts": {
    "dev:core": "cd packages/cli/template && bun run src/index.tsx",
    "typecheck": "bun run typecheck:core && bun run typecheck:cli && bun run typecheck:template",
    "typecheck:core": "cd packages/core && bun run typecheck",
    "typecheck:cli": "cd packages/cli && bun run typecheck",
    "typecheck:template": "cd packages/cli/template && bun run typecheck",
    "build": "bun run scripts/build-pkg.ts --pkg core && bun run scripts/build-pkg.ts --pkg cli",
    "build:core": "cd packages/core && bun run build",
    "build:cli": "cd packages/cli && bun run build",
    "dev:cli": "bun run packages/cli/src/index.ts",
    "clean": "rm -rf packages/*/dist packages/*/node_modules node_modules"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.10",
    "@types/bun": "latest",
    "@types/yargs": "^17.0.33",
    "typescript": "^5.9.2",
    "yargs": "^18.0.0"
  }
}
