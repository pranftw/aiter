{
  "name": "aiter",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/create/template",
    "dev"
  ],
  "scripts": {
    "dev": "cd packages/create/template && bun run src/index.tsx",
    "typecheck": "bun run typecheck:aiter && bun run typecheck:create && bun run typecheck:template",
    "typecheck:aiter": "cd packages/aiter && bun run typecheck",
    "typecheck:create": "cd packages/create && bun run typecheck",
    "typecheck:template": "cd packages/create/template && bun run typecheck",
    "build": "bun run scripts/build-pkg.ts --pkg aiter && bun run scripts/build-pkg.ts --pkg create",
    "build:aiter": "cd packages/aiter && bun run build",
    "build:create": "cd packages/create && bun run build",
    "create": "bun run packages/create/src/index.ts",
    "clean": "rm -rf packages/*/dist packages/*/node_modules node_modules"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.10",
    "@types/bun": "latest",
    "@types/yargs": "^17.0.33",
    "typescript": "^5.9.2",
    "yargs": "^18.0.0"
  }
}
