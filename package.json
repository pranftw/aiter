{
  "name": "aiter",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "dev"
  ],
  "scripts": {
    "setup-dev": "bun run scripts/setup-dev.ts",
    "dev": "cd dev && bun run src/index.tsx",
    "typecheck": "bun run typecheck:aiter && bun run typecheck:create-aiter-app",
    "typecheck:aiter": "cd packages/aiter && bun run typecheck",
    "typecheck:create-aiter-app": "cd packages/create-aiter-app && bun run typecheck",
    "build": "bun run scripts/build-pkg.ts --pkg aiter && bun run scripts/build-pkg.ts --pkg create-aiter-app",
    "build:aiter": "cd packages/aiter && bun run build",
    "build:create-aiter-app": "cd packages/create-aiter-app && bun run build",
    "create-aiter-app": "bun run packages/create-aiter-app/src/index.ts",
    "clean": "rm -rf packages/*/dist packages/*/node_modules node_modules"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.10",
    "@types/bun": "latest",
    "@types/yargs": "^17.0.33",
    "typescript": "^5.9.2",
    "yargs": "^18.0.0"
  }
}
