{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false,
    "paths": {
      "@/*": ["./src/*", "../core/src/*"],
      "@aiter/ui": ["./src/index.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}

